generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  password  String?
  rooms     Room[]
  canvas    Canvas[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Room {

  name      String
  adminId   String
  roomCode  Int     @id 
  user     User     @relation(fields: [adminId], references: [id],onDelete: Cascade)
  canvas    Canvas[]
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}



enum CanvasType{
  PROJECT
  WORKSPACE
}

model Canvas {
  id        String    @id @default(uuid())
  name      String

  drawing   String[]
  canvasType CanvasType @default(PROJECT)
  userId    String
  roomId    Int?
  user      User @relation(fields: [userId],references: [id],onDelete: Cascade)
  room      Room? @relation(fields: [roomId],references: [roomCode],onDelete:Cascade)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")
}

